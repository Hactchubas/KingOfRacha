<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="150dp"
        android:text="King of Racha"
        android:textColor="@color/primary"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonNewGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="newGame"
        android:text="New Game"
        android:textColor="@color/primary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonConfigs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="gameConfigs"
        android:text="Game Configs"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="@+id/buttonPreviousGames"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="@+id/buttonPreviousGames"
        app:layout_constraintTop_toBottomOf="@+id/buttonPreviousGames" />

    <Button
        android:id="@+id/buttonGameRules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="gameRules"
        android:text="Game Rules"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="@+id/buttonConfigs"
        app:layout_constraintStart_toStartOf="@+id/buttonConfigs"
        app:layout_constraintTop_toBottomOf="@+id/buttonConfigs" />

    <Button
        android:id="@+id/buttonPreviousGames"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="previousGames"
        android:text="Previous Games"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="@+id/buttonNewGame"
        app:layout_constraintStart_toStartOf="@+id/buttonNewGame"
        app:layout_constraintTop_toBottomOf="@+id/buttonNewGame" />
</androidx.constraintlayout.widget.ConstraintLayout>